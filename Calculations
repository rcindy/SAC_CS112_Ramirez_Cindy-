 import java.util.Scanner; // program uses class Scanner 
public class Lab5 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        //create a scanner input from the command window
        Scanner input = new Scanner(System.in);
        
        int number1;
        int number2;
        
        
        
        System.out.printf("Enter first number %d%n: ");
        number1 = input.nextInt();
        
        System.out.printf("Enter second number %d%n: ");
        number2 = input.nextInt(); 
        
        System.out.println("Hello, you entered: " + number1 + " and " + number2 );
        
        // sum of two numbers 
       
        int sum = number1 + number2;
        System.out.printf("The sum is %d%n ",sum);
        
        //subtract two numbers 
        
        int difference = number1 - number2;
        System.out.printf("The difference is  %d%n ",difference);
        
        // multiply two numbers
        int multiply = number1 * number2;
        System.out.printf("The muliplication is %d%n ",multiply);
        
        // divive two numbers 
        int divide = number1 / number2;
        System.out.printf("Dividing both numbers is: %d%n ",divide);
        
    }
    
}
