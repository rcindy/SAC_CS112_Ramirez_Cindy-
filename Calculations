 import java.util.Scanner; // program uses class Scanner 
public class Lab5 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        //create a scanner input from the command window
        Scanner input = new Scanner(System.in);
        
        double number1;
        double number2;
        
        
        
        System.out.printf("Enter first number %d%n: ");
        number1 = input.nextDouble();
        
        System.out.printf("Enter second number %d%n: ");
        number2 = input.nextDouble(); 
        
        System.out.println("Hello, you entered: " + number1 + " and " + number2 );
        
        // sum of two numbers 
       
        double sum = number1 + number2;
        System.out.println("The sum is " + sum);
        
        //subtract two numbers 
        
        double difference = number1 - number2;
        System.out.println("The difference is  %d%n " + difference);
        
        // multiply two numbers
        double multiply = number1 * number2;
        System.out.println("The muliplication is %d%n " + multiply);
        
        // divive two numbers 
        double divide = number1 / number2;
        System.out.println("Dividing both numbers is: %d%n " + divide);
        
    }
    
}
